 
<%= simple_form_for @revenue do |i| %>
<div class="container content">
  <div class="row">
    <div class="col-8 col-lg-6 col-xl-6 mx-auto text-center my-3">
      <div class="form-group">
        <%= i.input :revenue_type,
                    autofocus: true,
                    input_html: { class: 'form-control', autocomplete: 'off'} %>
      </div>

      <div class="form-group">
        <%= i.input :value,
                    input_html: { class: 'form-control', autocomplete: 'off'} %>
      </div>

      <div class="actions">
        <%= i.submit 'Adicionar', class: 'btn btn-primary btn-block'%>
      </div>
    </div>
  </div>
</div>
<% end %>