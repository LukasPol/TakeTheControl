<%= simple_form_for @spending do |f|%>
<div class="container content">
  <div class="row">
    <div class="col-8 col-lg-6 col-xl-6 mx-auto text-center my-3">
      <div class="form-group">
        <%= f.input :spending_type%>
      </div>

      <div class="form-group">
        <%= f.input :value%>
      </div>

      <div class="form-group">
        <%= f.submit 'Adicionar', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>
<% end %>
